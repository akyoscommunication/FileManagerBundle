<!-- Modal -->
<div class="modal fade aky-filemanager-modal" id="aky-filemanager-modal-{{ form.vars.id }}" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ 'File Manager'|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body aky-filemanager-container">
                <iframe class="aky-filemanager-iframe"
                        data-src="{{ path('file_index', {'secured': form.vars.secured ? 1 : 0, 'shared': form.vars.shared ? 1 : 0, 'previous_path': form.vars.value}) }}"
                        data-target="{{ form.vars.id }}"
                        width="100%"
                        height="500"
                        frameborder="0"></iframe>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'Fermer'|trans }}</button>
            </div>
        </div>
    </div>
</div>
