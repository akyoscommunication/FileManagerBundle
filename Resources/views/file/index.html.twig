{% extends '@AkyosFileManager/layout.html.twig' %}
{% form_theme uploadForm 'form_div_layout.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block page_content %}
    <section class="spaces mb-2 pt-2 pb-2 border-bottom">
        <ul class="nav nav-pills nav-fill">
            <li class="nav-item">
                <a class="nav-link {{ not view or view == "public"  ? "active" : "" }}" href="{{ path('file_index') }}">Espace public</a>
            </li>
            {% if file_manager_options.privateSpaces|length %}
                {% set isGrantedForAtLeastOnePrivateSpace = false %}
                {% for privateSpace in file_manager_options.privateSpaces %}
                    {% if is_granted(privateSpace.roles) %}{% set isGrantedForAtLeastOnePrivateSpace = true %}{% endif %}
                {% endfor %}
                {% if isGrantedForAtLeastOnePrivateSpace %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle {{ view == "private_space" ? "active" : "" }}" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Espaces partagés</a>
                        <div class="dropdown-menu w-100">
                            {% for key, privateSpace in file_manager_options.privateSpaces %}
                                {% if is_granted(privateSpace.roles) %}
                                    <a class="dropdown-item {{ view == "private_space" and private_space.id == privateSpace.id ? "active" : "" }}" href="{{ path('file_index', {'view': "private_space", 'private_space' : privateSpace.id }) }}">{{ privateSpace.name }}</a>
                                    {% if not loop.last %}<div class="dropdown-divider w-100"></div>{% endif %}
                                {% endif %}
                            {% endfor %}
                        </div>
                    </li>
                {% endif %}
            {% endif %}
            <li class="nav-item">
                <a class="nav-link {{ view == "secured" ? "active" : "" }}" href="{{ path('file_index', {'view': "secured"}) }}">Espace privé</a>
            </li>
        </ul>
    </section>

    <section class="aky-header-page">
        <div class="buttons d-flex">
            <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#aky-filemanager-modal-manage-folder" data-action="CREATE">
                <i class="fas fa-folder-plus"></i> Nouveau dossier
            </button>
            <button type="button" class="btn btn-primary btn-sm ml-2" data-toggle="collapse" data-target="#collapseUploadForm" aria-expanded="false" aria-controls="collapseUploadForm">
                <i class="fas fa-file-upload"></i> Nouveaux fichiers
            </button>
            <a class="btn btn-black btn-sm ml-auto" href="javascript:history.back()"><i class="fas fa-arrow-left"></i> Retour</a>
            <a class="btn btn-black btn-sm ml-2" href="javascript:location.reload()"><i class="fas fa-sync-alt"></i> Actualiser</a>
        </div>
        <div class="collapse" id="collapseUploadForm">
            {{ form_start(uploadForm) }}
                {{ form_widget(uploadForm) }}
                <button class="btn btn-outline-success">Ajouter</button>
            {{ form_end(uploadForm) }}
        </div>
    </section>

    <section class="current-dir mb-3 mt-3">
        <h4>
            {% set pathDirs = currentPath|split('/') %}
            <a href="{{ path('file_index', { 'path' : '/', 'view': view, 'private_space': private_space }) }}">{{ view == "secured" ? 'Documents sécurisés' : ( view == "private_space" ? private_space.name : 'Documents publics')}} </a>
            {% for key, value in pathDirs|filter((v, k) => k > 0) %}
                {% set pathString = "" %}
                {% for i in 1..key %}
                    {% set pathString = pathString ~ '/' ~ pathDirs[i]  %}
                {% endfor %}
                {% if value %}
                    {% if key < (pathDirs|length - 1) %}
                        / <a href="{{ path('file_index', { 'path' : pathString, 'view': view, 'private_space': private_space }) }}">{{ value }}</a>
                    {% else %}
                        / <span>{{ value }}</span>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </h4>
    </section>


    <section class="my-4">
        <div class="small-title mb-2">Dossiers</div>
        <div class="aky-file-collection">
            {% if directories != null %}
                {% for directory in directories %}
                    <div class="aky-file-container">
                        <div class="aky-file aky-file--folder">
                            <a class="aky-file-preview aky-file-updateiframe-btn" href="{{ path('file_index', { 'path' : app.request.get('path')~'/'~directory.name, 'view': view, 'private_space': private_space }) }}">
                                <i class="fas fa-folder"></i>
                            </a>
                            <div class="aky-file-btnmanager">
                                <div class="btn-group" role="group">
                                    <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#aky-filemanager-modal-manage-folder" data-action="EDIT" data-folder="{{ app.request.get('path')~'/'~directory.name }}">
                                        <i class="fas fa-pen"></i>
                                    </button>
                                    <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#aky-filemanager-modal-move-manager" data-file="{{ directory.absolutePath }}" data-type="FOLDER">
                                        <i class="fas fa-hand-point-right"></i>
                                    </button>
                                    <a class="btn btn-danger btn-sm" href="{{ path('file_remove_folder', { 'folder' : app.request.get('path')~'/'~directory.name, 'path' : app.request.get('path'), 'view': view, 'private_space': private_space }) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce dossier ? Tous les dossiers et fichiers qu\'il contient seront définitivement perdus.');"><i class="fas fa-times"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="aky-file-infos">
                            <div class="aky-file-infos__name">{{ directory.name|slice(0, 40) }}</div>
                            <div class="aky-file-infos__size">{{ directory.size|format_bytes|replace({' ': '&nbsp;'})|raw }}</div>
                        </div>
                    </div>
                {% else %}
                    <i><small>Pas de dossiers</small></i>
                {% endfor %}
            {% else %}
                <i><small>Pas de dossiers</small></i>
            {% endif %}
        </div>
    </section>

    <section>
        <div class="small-title mb-2">Fichiers</div>
        <div class="aky-file-collection">
            {% for file in files %}
                <div class="aky-file-container">
                    <div class="aky-file">
                        <a href="#" class="aky-file-preview aky-file-addto-btn" data-path="{{ file.path }}" data-urltoget="{{ path('file_get_file_id') }}">
                            {{ renderFileManager(file.path, false, true)|raw }}
                        </a>
                        <div class="aky-file-btnmanager">
                            <div class="btn-group" role="group">
                                {% if view != "public" %}
                                    <a href="{{ path('file_download_secured_file', {'path': file.path}) }}" class="btn btn-primary btn-sm"><i class="fas fa-file-download"></i></a>
                                {% else %}
                                    <a href="{{ renderFileManagerUrl(file.path) }}" class="btn btn-primary btn-sm" target="_blank" rel="noopener noreferrer"><i class="fas fa-external-link-alt"></i></a>
                                {% endif %}
                                <button type="button" class="btn btn-primary btn-sm aky-filemanager-modal-edit-file-btn" data-toggle="modal" data-target="#aky-filemanager-modal-edit-file" data-path="{{ file.path }}" data-url="{{ path('file_edit', { 'path' : file.path, 'view': view, 'private_space': private_space }) }}">
                                    <i class="fas fa-pen"></i>
                                </button>
                                <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#aky-filemanager-modal-move-manager" data-file="{{ file.path }}" data-type="FILE">
                                    <i class="fas fa-hand-point-right"></i>
                                </button>
                            </div>
                        </div>
                        <div class="aky-file-collection-remove">
                            <form method="post" class="not-submit index-delete" action="{{ path('file_delete', {'path' : app.request.get('path'), 'view': view, 'private_space': private_space}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce fichier ? Il sera définitivement perdu.');">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_file" value="{{ file.path }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ file.name) }}">
                                <button class="btn btn-danger btn-sm"><i class="fas fa-times"></i></button>
                            </form>
                        </div>

                    </div>
                    <div class="aky-file-infos">
                        <div class="aky-file-infos__name">{{ file.name|slice(0, 40) }}</div>
                        <div class="aky-file-infos__size">{{ file.size|format_bytes|replace({' ': '&nbsp;'})|raw }}</div>
                    </div>
                </div>
            {% else %}
                <i><small>Pas de fichiers</small></i>
            {% endfor %}
        </div>
    </section>
    {% include '@AkyosFileManager/file/_modal.html.twig' %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
