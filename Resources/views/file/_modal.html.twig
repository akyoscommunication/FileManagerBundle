{% form_theme nameFolderFormType 'bootstrap_4_layout.html.twig' %}
{% form_theme moveFormType 'bootstrap_4_layout.html.twig' %}

<!-- Modal -->
<div class="modal fade aky-filemanager-modal" id="aky-filemanager-modal-manage-folder" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ 'Créer / Renommer un dossier'|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start(nameFolderFormType) }}
                    {{ form_row(nameFolderFormType.name) }}
                    {{ form_row(nameFolderFormType.folder) }}
                    <input type="submit" id="aky-filemanager-modal-manage-folder-submit" class="d-none"/>
                {{ form_end(nameFolderFormType) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'Annuler'|trans }}</button>
                <button type="submit" class="btn btn-outline-success"><label class="button-label mb-0" for="aky-filemanager-modal-manage-folder-submit">{{ 'Enregistrer'|trans }}</label></button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade aky-filemanager-modal" id="aky-filemanager-modal-edit-file" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ 'Éditer les informations du fichier'|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="aky-filemanager-modal-edit-file-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'Annuler'|trans }}</button>
                <button type="submit" class="btn btn-outline-success"><label class="button-label mb-0" for="aky-filemanager-modal-edit-file-submit">{{ 'Enregistrer'|trans }}</label></button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade aky-filemanager-modal" id="aky-filemanager-modal-move-manager" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ 'Déplacer le fichier/dossier'|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start(moveFormType) }}
                {{ form_widget(moveFormType) }}
                <input type="submit" id="aky-filemanager-modal-move-manager-submit" class="d-none"/>
                {{ form_end(moveFormType) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'Annuler'|trans }}</button>
                <button type="submit" class="btn btn-outline-success"><label class="button-label mb-0" for="aky-filemanager-modal-move-manager-submit">{{ 'Déplacer'|trans }}</label></button>
            </div>
        </div>
    </div>
</div>

